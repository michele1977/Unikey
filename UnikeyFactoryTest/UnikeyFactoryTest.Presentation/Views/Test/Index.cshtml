                <input type="number" id="txt2" hidden class="class-mymarginleft " style="width: 80px" step="0.5">
            </div>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <div class="input-group-text">
                        <input type="checkbox" id="check3" onclick="CorrectAnswer('check3','checkbox3','txt3','lbl3')">
                    </div>
                </div>
                <input type="text" class="form-control" style="max-width: 100%;width: 70%;" id="checkbox3" />
                <label hidden id="lbl3" class="class-mymarginleft ">Score:</label>
                <input type="number" id="txt3" hidden class="class-mymarginleft " style="width: 80px" step="0.5">
            </div>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <div class="input-group-text">
                        <input type="checkbox" id="check4" onclick="CorrectAnswer('check4','checkbox4','txt4','lbl4')">
                    </div>
                </div>
                <input type="text" class="form-control" style="max-width: 100%;width: 70%;" id="checkbox4" />
