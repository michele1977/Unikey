@model UnikeyFactoryTest.Presentation.Models.TestModel

@{
    ViewBag.Title = "Index";
}

<style>
    .class-selected {
        border: 2px solid limegreen
    }

    .class-unselected {
        border: 1px solid black
    }

    .class-mymarginleft {
        margin-left: 5px
    }
</style>

<script>

    function CorrectAnswer(id,idchk, idtxt, idlbl) {
        //$('#' +id).addClass("class-selected");
        //alert($("#checkbox1").val());
        //alert($('.myCheckbox').is(':checked'));
        
        //if($('.myCheckbox').is(':checked')) {
        //    $('#' + id).addClass("class-selected");
        //}
        //else {
        //    $('#' + id).addClass("class-unselected");
        //}

        var isChecked = document.getElementById(id).checked 
       // alert(isChecked);
        if (isChecked == true) {
            document.getElementById(idchk).classList.add("class-selected")
            document.getElementById(idtxt).hidden = false
            document.getElementById(idlbl).hidden = false
        }
        else {
            document.getElementById(idchk).classList.remove("class-selected")
            document.getElementById(idtxt).hidden = true
            document.getElementById(idlbl).hidden = true
        }


    }

    function enablebtnaddquestion(idBtn, idBtn2) {
        document.getElementById(idBtn).hidden = false

        document.getElementById(idBtn2).hidden = true

    }

    function setdivvisible(idDiv, idDiv2) {

        document.getElementById(idDiv).hidden = false
        document.getElementById(idDiv2).hidden = true

    }
    function setdivinvisible(idDiv, idDiv2) {
        document.getElementById(idDiv).hidden = true
        document.getElementById(idDiv2).hidden = false

    }

</script>
<div class="container" style="text-align: center">
    <div class="form-group">
        <h1> Create new test</h1>
        <label for="nomeTest">TestTitle:</label>
        @*@Html.TextBox("Txt", "", new { @class = "form-control" })*@
        <input type="text" class="form-control" id="nomeTest" style="max-width: 100%; width: 80%;margin-left: 100px" />

        <label>DataCreazione:</label>
        @Html.TextBox("Txt1", @DateTime.Now.ToString(), new { @class = "form-control", @type = "date", style = "max-width: 100%;width: 80%;margin-left: 100px" })
    </div>
</div>

<button class="btn btn-primary" onclick="enablebtnaddquestion('btnaddquestion','btnSave')" id="btnSave" style="margin-left: 120px">Create</button>

<button class="btn btn-primary" style="margin-left: 950px" hidden id="btnaddquestion" onclick="setdivvisible('mydiv','mydiv2')">+</button>

<div class="container" id="mydiv" style="text-align: center" hidden>
    @using (Html.BeginForm("AddQuestion", "Test", FormMethod.Post))
