@model UnikeyFactoryTest.Presentation.Models.UserModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Log In</title>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
</head>

<body>
<div style="width: 100%;text-align: center">
    <h1>Welcome User</h1>
</div>

    <div class="container col-6" style="padding: 15px; max-width: 500px; border: 1px solid black; border-radius: 10px; background-color: lightblue">
        <form action="/User/CheckData" method="post">
            <div class="form-group">
                <label for="lbUsername">Username</label>
                <input type="text" class="form-control" id="lbUsername" name="Username">
                @Html.ValidationMessageFor(x => x.Username,null, new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label for="lbPassword">Password</label>
                <input type="password" class="form-control" id="lbPassword" name="Password">
            </div>
            <div style="width: 100%;text-align: right">
                <button type="submit" class="btn btn-primary">Log In</button>
            </div>
        </form>
    </div>
    <br />

    <div class="container alert alert-danger col-6" role="alert" style="display:none" id="myDiv">
        Username or password invalid
    </div>

    @*@if (Model.IsUser.Equals("IsNotAUser"))
    {
        <script>
            let myDiv = document.getElementById("myDiv");
            myDiv.style.display = "block";
        </script>
    }*@


    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
</body>
</html>
