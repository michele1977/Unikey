@model Presentazione.Models.UserRegistrationModel

@{
    ViewBag.Title = "Registration Page";
}

<h2>New User</h2>

<hr />

@using (Html.BeginForm("Save", "User", FormMethod.Post, new { @class="container" }))
{
    <div class="form-group">
        @Html.Label("Username:")
        <br />
        @Html.TextBoxFor(m => m.Username, new { @class="form-control" })
    </div>
    <div class="form-group">
        @Html.Label("Password:")
        <br />
        @Html.PasswordFor(m => m.Password, new { @class="form-control" })
    </div>
    <div class="form-group">
        @Html.Label("Email:")
        <br />
        @Html.TextBoxFor(m => m.Email, new { @class="form-control" })
    </div>
    <br />
    <div class="text-right">
        <input type="submit" value="Save User" class="btn btn-primary" />
    </div>
}

<br />

@if (Model.Check == BLL.ErrorState.Yes)
{
    <div class="alert alert-success" role="alert">
        Registration done!
    </div>
}
else if (Model.Check == BLL.ErrorState.No)
{
    <div class="alert alert-danger" role="alert">
        Registration failure!
    </div>
}

