@model UserPresentation.Models.ShopModel

@{
    ViewBag.Title = "Shop";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">


<h2>Shop</h2>

<hr />

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <table class="table">
                <tr>
                    <th>
                        #
                    </th>
                    <th>
                        Brand
                    </th>
                    <th></th>
                </tr>
                @foreach (var item in Model.Brands)
                {
                    <tr>
                        <td>
                        </td>
                        <td>
                            @Html.DisplayFor(modelitem => item.Description)
                        </td>
                        <td>
                            @using (Html.BeginForm("BrandDetails", "Shop", FormMethod.Post))
                            {
                                <input type="hidden" name="IdBrand" value=@item.ID />
                                <button class="btn btn-primary"><i class="fa fa-bars"></i></button>
                            }
                        </td>
                    </tr>
                }
            </table>
        </div>
        <div class="col-md-4">
            @if (Model.ProductsForBrand != null)
            {
                <table class="table">
                    <tr>
                        <th>
                            #
                        </th>
                        <th>
                            Product
                        </th>
                        <th></th>
                    </tr>
                    @foreach (var item in Model.ProductsForBrand)
                    {
                        <tr>
                            <td>
                            </td>
                            <td>
                                @Html.DisplayFor(modelitem => item.Description)
                            </td>
                            <td>
                                @using (Html.BeginForm("ProductDetails", "Shop", FormMethod.Post))
                                {
                                    <input type="hidden" name="IdBrand" value="@Model.IdBrand" />
                                    <input type="hidden" name="IdProduct" value=@item.ID />
                                    <button class="btn btn-primary"><i class="fa fa-bars"></i></button>
                                }
                            </td>
                        </tr>
                    }
                </table>
            }
        </div>
        <div class="col-md-4">
            <br />
            <br />
            @if (Model.Product != null)
            {
                <div class="text-center">
                    <div class="form-group">
                        <h4><strong>Description:</strong> @Html.DisplayFor(model => Model.Product.Description, new { @class = "form-control" })</h4>
                    </div>
                    <div class="form-group">
                        <h4><strong>Brand:</strong> @Html.DisplayFor(model => Model.Brand.Description, new { @class = "form-control" })</h4>
                    </div>
                    <div class="form-group">
                        <h4><strong>Price$:</strong> @Html.DisplayFor(model => Model.Product.Price, new { @class = "form-control" })</h4>
                    </div>
                    <div class="form-group">
                        <h4><strong>Color:</strong> @Html.DisplayFor(model => Model.Product.Color, new { @class = "form-control" })</h4>
                    </div>
                    <div class="form-group">
                        <h4><strong>Weigth:</strong> @Html.DisplayFor(model => Model.Product.Weigth, new { @class = "form-control" })</h4>
                    </div>
                </div>
             }
        </div>
    </div>
</div>

